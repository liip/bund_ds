/*----------------------------------------*\
  TAB
\*----------------------------------------*/

.tabs {
  .container__center--xs & {
    @apply bg-gray-50 py-8;
  }

  .tab__control {
    &:hover:not(.tab__control--active) {
      @apply bg-gray-100;
    }
  }
}

.tab__controls {
  @apply flex;
  @apply overflow-x-auto overflow-y-hidden whitespace-nowrap;
}

.tab__control {
  @apply px-4 py-2;
  &.tab__control--active {
    @apply bg-white;
    @apply relative;
    @apply border-t-4 border-red-600;
    &:after {
      content: "";
      height: 1px;
      bottom: -1px;
      left: 0px;
      @apply absolute w-full bg-white;
    }
  }
  &:hover:not(.tab__control--active) {
    @apply bg-gray-50;
  }
}

.tab__container {
  @apply border border-gray-50 bg-white;
  @apply md:px-6 px-4 pb-6;

  &.tab__container--is-hidden {
    @apply hidden;
  }
}
