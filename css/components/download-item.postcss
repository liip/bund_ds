/*----------------------------------------*\
  Download Item
\*----------------------------------------*/

.download-list .download-list-item {
  @apply my-0 list-none;
}

.download-item {
  @apply flex w-full;
  @apply pl-0 pb-4 pt-4;
  @apply border-t border-gray-200;
  @apply text-left;
  @apply hover:bg-secondary-50;
}

.download-item__icon {
  @apply pr-2 md:pr-4 xl:pr-6;
  @apply text-red-600;
}

.download-item__title {
  @apply font-bold;
}

.download-item__description {
  @apply pb-3;
}

.download-meta-info {
  @apply text-gray-400;
}

.download-item__meta-divider {
  @apply px-3;
}
